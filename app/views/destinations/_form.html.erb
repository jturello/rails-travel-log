<%= form_for [@country, @destination ] do |f| %>
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :blurb %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :blurb %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :image_url %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :image_url %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.submit %>
    </div>
  </div>
<% end %>
