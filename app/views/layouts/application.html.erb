<!DOCTYPE html>
<html>
  <head>
    <title>Travel Log</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyD70BV71CaOoaEY8IEwSj7mrUAobxV6YPU&callback=initMap">
    </script>
  </head>

  <body>
<div class="container">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid bg-success">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <!-- <span class="icon-bar"></span> -->
        </button>
        <%= link_to "Travel Log", root_path, :class => "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Add Country", new_country_path %></li>
          <% end %>

        </ul>
        <ul class="nav navbar-nav pull-right">

            <% if user_signed_in? %>
              <li><a>User: <%= current_user.username %></a></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
              <li> <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => '' %></li>
            <% else %>
              <li><%= link_to 'Log In', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>

        </ul>

      </div><!-- /.navbar-collapse -->
    </div>
  </nav>

  <div class="flash-alert">
    <%= flash[:alert] %>
  </div>

  <div class="flash-notice">
    <%= flash[:notice] %>
  </div>



  <%= yield %>

</div>
</body>
</html>
