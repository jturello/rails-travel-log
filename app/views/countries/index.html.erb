<h1>Vacation Destinations</h1>

<h3>Destinations:</h3>
<% if @countries.any? %>
<ul>
  <% @countries.each do |country| %>
  <li>
    <p><%= link_to country.name, country_path(country) %> <%= "(" + country.sub_region + ")" if country.sub_region %>:
    <%= country.blurb %></p>
  </li>
  <% end %>
</ul>
<% else %>
  <p>No countries added yet!</p>
<% end %>
