<%= form_for [@destination.country, @destination, @post], remote: true do |f| %>
  <div class="row">
    <div class="col-sm-2">
      <%= f.label :content %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <%= f.submit %>
    </div>
  </div>
<% end %>
